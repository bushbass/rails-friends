<div class="card mr-3 my-3" style="width: 18rem">
  <div class="card-body">
    <%= render @friend %>

    <div>
      <%= link_to "Edit this friend", edit_friend_path(@friend) , class:"btn
      btn-warning mb-2" %>
       <%= button_to "Destroy this friend", @friend, method:
      :delete, class:"btn btn-danger mb-2" %>
       <%= link_to "Back to friends", friends_path, class:"btn
      btn-primary mb-2" %>
    </div>
  </div>
</div>
